{
    "type": "task_card",
    "loader": {
        "type": "load_hf",
        "path": "kasnerz/scigen"
    },
    "preprocess_steps": [
        {
            "type": "split_random_mix",
            "mix": {
                "train": "train",
                "validation": "validation",
                "test": "test"
            }
        },
        {
            "type": "construct_table_structure",
            "fields": [
                "table_column_names",
                "table_content_values",
                "table_caption"
            ],
            "to_field": "table"
        },
        {
            "type": "serialize_table_as_indexed_row_major",
            "field_to_field": [
                [
                    "table",
                    "input"
                ]
            ]
        },
        {
            "type": "add_fields",
            "fields": {
                "type_of_input": "Table",
                "type_of_output": "Text"
            }
        },
        {
            "type": "rename_fields",
            "field_to_field": {
                "text": "output"
            }
        }
    ],
    "task": "tasks.generation",
    "templates": "templates.generation.all"
}
